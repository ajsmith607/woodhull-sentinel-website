---
layout: layouts/base.njk
wide: true
pagination:
  data: metadata.allPages
  size: 1
  alias: item
permalink: "pages/{{ item.filename }}/"
eleventyComputed:
  title: "{{ item.newspaper }} - {{ item.dateDisplay }} - Page {{ item.pageNumber }}"
---

<article class="detail-page">
  <header>
    <h1>{{ item.newspaper }}</h1>
    <p><strong><time datetime="{{ item.date }}">{{ item.dateDisplay }}</time> &mdash; Page {{ item.pageNumber }}</strong></p>
  </header>

  <div class="image-viewer">
    <div id="panzoom-container">
      <img id="newspaper-image"
           src="{{ item.jpg | rootRelative }}"
           alt="{{ item.newspaper }} - {{ item.dateDisplay }} - Page {{ item.pageNumber }}">
    </div>

    <div class="viewer-controls">
      <button id="zoom-in">+ Zoom In</button>
      <button id="zoom-out">- Zoom Out</button>
      <button id="reset-zoom">Reset</button>
      <a class="nav-btn" href="{{ item.jpg | rootRelative }}" download>Download Full Image</a>
    </div>
  </div>

  <nav class="page-navigation">
    <div class="nav-prev">
      {% if item.prevPage %}
        <a href="/pages/{{ item.prevPage }}/" class="nav-btn">&larr; Page {{ item.prevPageNumber }}</a>
      {% else %}
        <span class="nav-btn disabled">&larr; Previous Page</span>
      {% endif %}
      {% if item.prevIssue %}
        <a href="/pages/{{ item.prevIssue }}/" class="nav-btn">&larr; {{ item.prevIssueDateDisplay }}</a>
      {% else %}
        <span class="nav-btn disabled">&larr; Previous Issue</span>
      {% endif %}
    </div>

    <div class="nav-center">
      <span class="nav-current">Page {{ item.pageNumber }}</span>
      <span class="nav-current">{{ item.dateDisplay }}</span>
    </div>

    <div class="nav-next">
      {% if item.nextPage %}
        <a href="/pages/{{ item.nextPage }}/" class="nav-btn">Page {{ item.nextPageNumber }} &rarr;</a>
      {% else %}
        <span class="nav-btn disabled">Next Page &rarr;</span>
      {% endif %}
      {% if item.nextIssue %}
        <a href="/pages/{{ item.nextIssue }}/" class="nav-btn">{{ item.nextIssueDateDisplay }} &rarr;</a>
      {% else %}
        <span class="nav-btn disabled">Next Issue &rarr;</span>
      {% endif %}
    </div>
  </nav>
</article>

<script src="/assets/js/vendor/panzoom.min.js"></script>
<script src="/assets/js/viewer.js"></script>
